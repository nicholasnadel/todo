<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html>
  <head>
    <title>Nickmarks</title>
    <%= stylesheet_link_tag    "application", media: "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <nav class="navbar navbar-default" role="navigation">
      <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display
        -->
        <div class="navbar-header">
          <button class="navbar-toggle collapsed" data-target="#bs-example-navbar-collapse-1" data-toggle="collapse" type="button">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="bookmarks#index">Nickmarks</a>


        </div>
        <!-- Collect the nav links, forms, and other content for toggling
        -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav">
                  <li><a href="bookmarks#index">My Nickmarks</a></li>
            <li class="active"></li>
          </ul>
          <form class="navbar-form navbar-right" role="search">
            <div class="form-group">
              <input class="form-control" placeholder="Search" type="text"> </input>
            </div>
            <button class="btn btn-default" type="submit">Goooo!</button>
          </form>

          <ul class="nav navbar-nav navbar-right"></ul>

        </div>
      </div>

    <div class="pull-right">
          <% if current_user %>
            Logged in as <%= link_to (current_user.name || current_user.email), current_user %>.
            <%= link_to "Log Out", destroy_user_session_path %>
          <% else %>
            <%= link_to "Sign Up", new_user_registration_path %> or
            <%= link_to "Log In", new_user_session_path %>
          <% end %>
        </div>
      </ul>

    </nav>
  </body>
  <%= yield %>
</html>
